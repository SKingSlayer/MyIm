<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace绑定一个dao接口-->
<mapper namespace="com.example.demo.MyData.Dao.UserDao">
    <select id="getUserList" resultType="com.example.demo.MyData.Entity.User">
        select * from  users
    </select>
    <insert id="insertUser" parameterType="com.example.demo.MyData.Entity.User">
        INSERT INTO users(id,money) VALUES (2,300)
    </insert>
    <update id="addMoney">
        UPDATE users SET money=#{param2}+money WHERE id=#{param1}
    </update>
    <select id="getUser" resultType="com.example.demo.MyData.Entity.User">
        select * from  users where id=#{id}
    </select>
</mapper>